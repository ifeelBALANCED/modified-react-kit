{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES6",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@utils": ["src/utils/index.ts"],
      "@components": ["src/components/index.ts"],
      "@chakra": ["src/chakra/index.ts"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "index.ts"],
  "exclude": ["node_modules", "webpack.config.ts"]
}
